# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
insert_final_newline = true

[*.{js,ts}]
indent_size = 2
indent_style = space
quote_type = single

[*.{yml,yaml}]
indent_size = 2
indent_style = space
quote_type = double

[*.go]
indent_size = 4

[Makefile]
indent_style = tab

[COMMIT_EDITMSG]
max_line_length = 72
